doctype html
html
  head
    if title
      title #{title} &mdash; Lorelei
    else
      title Lorelei
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    include javascript-header.jade
  body
    div.header
      include navigation.jade
    div.container
      div(class="row row-offcanvas row-offcanvas-right")
        div(class="col-xs-12 col-sm-9")
          p(class="pull-right visible-xs")
            button(class="btn btn-primary btn-xs", data-toggle="offcanvas", type="button") Toggle nav
          block content
        include navigation-footer.jade
      hr
      footer
        p &copy; 2016 Ryan W. Moore

    include javascript.jade
